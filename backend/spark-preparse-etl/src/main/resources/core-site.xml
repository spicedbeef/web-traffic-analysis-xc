<!-- Put site-specific property overrides in this file. -->

<configuration>
	<property>
    		<name>fs.defaultFS</name>
    		<value>hdfs://19master:9999</value>
		<description>表示HDFS的基本路径</description>
	</property>
	<property>
                 <name>fs.trash.interval</name>
                <value>3</value>
		<description>表示删除后的文件或目录在Trash保存3分钟</description>
        </property>

	<property>
                <name>hadoop.proxyuser.hadoop-xc.hosts</name>
                <value>*</value>
        </property>
        <property>
                <name>hadoop.proxyuser.hadoop-xc.groups</name>
                <value>*</value>
        </property>
</configuration>
